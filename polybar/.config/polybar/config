;=====================================================
;
;   To learn more about how to configure Polybar
;   go to https://github.com/jaagr/polybar
;
;   The README contains alot of information
;
;=====================================================

[colors]
;background = ${xrdb:color0:#222}
background = #000000
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #ffffff
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

success = #00ff00
failure = #ff0000

inactive = #222222
active = #003ea3

[bar/bottom]
monitor = ${env:MONITOR}
width = 100%
height = 30
offset-x = 0
offset-y = 0
radius = 0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

bottom = true
line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 0
module-margin-right = 5


font-0 = NotoSans-Regular:size=10;2
font-1 = MaterialIcons-Regular:size=13;5


modules-left = i3
modules-center =
modules-right = volume keyboard torn memory filesystem backlight battery wifi eth date

tray-position = right
tray-padding = 0
tray-transparent = false
tray-background = #000000

;wm-restack =

override-redirect = false

[module/keyboard]
type=internal/xkeyboard
format =  <label-layout>

[module/torn]
type=custom/script
exec = ~/.config/polybar/torn-status
interval = 30

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-focused = %index%
label-focused-foreground = #ffffff
label-focused-background = ${colors.active}
;label-focused-underline = ${self.active}
label-focused-padding = 4

label-visible = %index%
label-visible-background = ${colors.inactive}
label-visible-padding = 4

label-unfocused = %index%
label-unfocused-background = ${colors.background}
label-unfocused-padding = 4

label-urgent = %index%
label-urgent-background = #900000
label-urgent-padding = 4

[module/eth]
type = internal/network
interface = enp3s0
interval = 1

format-connected-prefix = ""
;format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%
label-connected-foreground = ${colors.success}

format-disconnected = <label-disconnected>
format-disconnected-prefix = ""
format-disconnected-prefix-foreground = ${colors.failure}
label-disconnected = "%ifname% down"
label-disconnected-foreground = #66
;format-disconnected-underline = ${colors.failure}

[module/wifi]
type = internal/network
interface = wlan0
interval = 1

format-connected-prefix = " "
;format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%
label-connected-foreground = ${colors.success}

format-disconnected = <label-disconnected>
format-disconnected-prefix = ""
format-disconnected-prefix-foreground = ${colors.failure}
label-disconnected = "%ifname% down"
label-disconnected-foreground = #66
;format-disconnected-underline = ${colors.failure}

[module/date]
type = internal/date
interval = 5

date = " %a - %d/%m/%Y"

time = %H:%M

label = %date% - %time%

[module/volume]
type = internal/pulseaudio

format-volume = <ramp-volume><label-volume>
format-muted = <label-muted>

label-muted =  0%
label-muted-foreground = #66

ramp-volume-0 = 
ramp-volume-1 = 

[module/backlight]
type = internal/backlight
card = intel_backlight

label =  %percentage%%

[module/battery]
type = internal/battery

; This is useful in case the battery never reports 100% charge
full-at = 99

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = ADP1

label-discharging =%percentage%%
label-charging =%percentage%%
label-full =%percentage%%

[module/filesystem]
type = internal/fs

; Mountpoints to display
mount-0 = /

label-mounted = %used% / %total%

[module/memory]
type = internal/memory

label =  %gb_used%/%gb_total%

[settings]
screenchange-reload = true

throttle-output = 5
throttle-output-for = 10

[global/wm]
margin-top = 0
margin-bottom = 0
